{% extends 'base.html.twig' %}

{% block title %}News
{% endblock %}

{% block body %}
	<div class="container">
		<br><br><br>
		<h1>News</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ news.id }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ news.description }}</td>
				</tr>
				<tr>
					<th>ImageName</th>
					<td>{{ news.imageName }}</td>
				</tr>
				<tr>
					<th>CreatedAt</th>
					<td>{{ news.createdAt ? news.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>UpdatedAt</th>
					<td>{{ news.updatedAt ? news.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_news_index') }}">back to list    </a>

		<a href="{{ path('app_news_edit', {'id': news.id}) }}"> edit </a><br><br>

		{{ include('news/_delete_form.html.twig') }}<br><br>
	</div>
{% endblock %}
